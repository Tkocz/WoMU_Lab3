<Page
    x:Class="WoMU_Lab3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WoMU_Lab3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid  Width="auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="Assets/images/triforce_bg2.png"/>
        <Button Background="AliceBlue" BorderBrush="Aquamarine" Margin="0, 20, 0 ,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="75" Click="GoToRoomView_OnClick">
            <TextBlock FontSize="25" Text="Create new room"/>
        </Button>
        <Button Background="Blue" BorderBrush="Bisque" Margin="0, 130 ,0, 0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="75" Click="GoToListRoomView">
            <TextBlock FontSize="25" FontFamily="Arial" FontStyle="Italic"  Foreground="Aqua" Text="View Rooms"/>
        </Button>
    </Grid>
</Page>